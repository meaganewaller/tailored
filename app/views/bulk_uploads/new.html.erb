<%= content_for :title, t("scaffold.new.title", model: @resource_class.model_name) %>

<div class="container max-w-xl mx-auto my-8">
  <h1 class="text-3xl font-bold mb-6">
    Upload New <%= @resource_class.model_name.human.pluralize %>
  </h1>

  <%= form_with(url: bulk_upload_wardrobe_items_path, multipart: true, local: true, class: "shadow-md rounded-lg px-8 pt-6 pb-8 mb-4", html: { data: { controller: "image-preview" }}) do |form| %>
    <div id='image-preview' data-image-preview-target='preview' class='mb-3 flex flex-row'>
      <%= image_tag("placeholder_image.jpg", width: "100px", height: "100px") %>
    </div>
    <div class="my-2">
      <%= form.label :images, "Select clothing photos" %><br>
      <%= form.file_field :images, multiple: true, accept: "image/*", class: "form-control-file photo_update", data: { image_preview_target: "input", action: "change->image-preview#preview" } %>
    </div>

    <!-- Submit Button -->
    <div>
      <%= form.submit t("submit"), class: "font-bold py-2 px-4 rounded focus:outline-none focus:ring-2 focus:ring-teal-500 focus:ring-opacity-50" %>
    </div>
  <% end %>
</div>
