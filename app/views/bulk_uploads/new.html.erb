content_for :title, t("scaffold.new.title", model: @resource_class.model_name)
 %>

<div class="container mx-auto my-8" data-controller="image-preview">
  <h1 class="text-3xl font-bold mb-6">
@resource_class.model_name.human.pluralize
 %>
  </h1>

  <div class="mx-auto rounded-lg overflow-hidden max-w-[80%]">

    <div class="items-center">
      <div class="flex w-full justify-center" id="image-preview" data-image-preview-target="preview"></div>

form_with(
                url: bulk_upload_wardrobe_items_path,
                multipart: true,
                local: true,
                class: ""
)
 do |form| %>
        <div class="relative border-dashed h-48 rounded-lg border-2 border-primary-700 dark:bg-gray-900 dark:border-gray-700 bg-gray-100 flex justify-center items-center">
          <div class="absolute">
            <div class="flex flex-col items-center">
              <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-10 text-primary-700">
                <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 9.776c.112-.017.227-.026.344-.026h15.812c.117 0 .232.009.344.026m-16.5 0a2.25 2.25 0 0 0-1.883 2.542l.857 6a2.25 2.25 0 0 0 2.227 1.932H19.05a2.25 2.25 0 0 0 2.227-1.932l.857-6a2.25 2.25 0 0 0-1.883-2.542m-16.5 0V6A2.25 2.25 0 0 1 6 3.75h3.879a1.5 1.5 0 0 1 1.06.44l2.122 2.12a1.5 1.5 0 0 0 1.06.44H18A2.25 2.25 0 0 1 20.25 9v.776" />
              </svg>
              <span class="block text-gray-400 font-normal">Attach your files here</span>
            </div>
          </div>

form.file_field :images, multiple: true, accept: "image/*", class: "form-control-file h-full w-full opacity-0", data: {image_preview_target: "input", action: "change->image-preview#preview"}
 %>
        </div>

        <div class="flex w-full mt-5 justify-center">
form.submit t("submit"), class: "btn btn-primary btn-xl w-[20%]"
 %>
        </div>
      <% end %>
    </div>
  </div>
