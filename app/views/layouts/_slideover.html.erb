<dialog
  id="slideovernav"
  data-slideover-target="dialog"
  class="slideover h-full max-h-full m-0 w-96 p-8 backdrop:bg-rose-500/80 dark:bg-rose-700 bg-rose-200">
  <div class="grid place-items-end">
    <button
      autofocus
      data-action="slideover#close"
      class="px-2.5 py-1 bg-rose-500 text-white text-sm rounded hover:bg-rose-600 dark:bg-rose-800 dark:text-rose-300 dark:hover:bg-rose-900">
      Close
    </button>
  </div>
  <div class="flex flex-col text-left">
    <span class="sidebar-item">
      <%= nav_link_to root_path, class: "sidebar-link" do %>
        <span>🏠</span>
        <span class="[[data-expanded=false]_&]:hidden">Home</span>
      <% end %>
    </span>
    <span class="sidebar-item">
      <%= nav_link_to wardrobe_items_path, class: "sidebar-link", starts_with: "/wardrobe_items" do %>
        <span>👗</span>
        <span class="[[data-expanded=false]_&]:hidden">My Wardrobe</span>
      <% end %>
    </span>
    <span class="sidebar-item">
      <%= nav_link_to outfits_path, class: "sidebar-link", starts_with: "/outfits" do %>
        <span>🪞</span>
        <span class="[[data-expanded=false]_&]:hidden">Outfits</span>
      <% end %>
    </span>
    <span class="sidebar-item">
      <%= nav_link_to quizzes_path, class: "sidebar-link", starts_with: "/quizzes" do %>
        <span>🧪</span>
        <span class="[[data-expanded=false]_&]:hidden">Quizzes</span>
      <% end %>
    </span>
  </div>
</dialog>
