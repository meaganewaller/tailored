<aside
  data-controller="sidebar"
cookies
      <% end %>>
    <span class="sidebar-item">
nav_link_to wardrobe_items_path, class: "sidebar-link", starts_with: "/wardrobe_items"
 do %>
        <span>👗</span>
        <span class="[[data-expanded=false]_&]:hidden">My Wardrobe</span>
      <% end %>
    </span>
    <span class="sidebar-item">
nav_link_to outfits_path, class: "sidebar-link", starts_with: "/outfits"
 do %>
        <span>🪞</span>
        <span class="[[data-expanded=false]_&]:hidden">Outfits</span>
      <% end %>
    </span>
    <span class="sidebar-item">
nav_link_to quizzes_path, class: "sidebar-link", starts_with: "/quizzes"
 do %>
        <span>🧪</span>
        <span class="[[data-expanded=false]_&]:hidden">Quizzes</span>
      <% end %>
    </span>
  </div>
  <div class="text-center text-2xl">
button_to nil, data: {action: "click->sidebar#toggle"}
 do %>
      <span class="[[data-expanded=true]_&]:hidden">➡️</span>
      <span class="[[data-expanded=false]_&]:hidden">⬅️</span>
    <% end %>
  </div>
</aside>
