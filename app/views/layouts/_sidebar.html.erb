<aside
  class="z-50 bg-rose-400 hidden md:flex flex-col grow gap-y-5 px-4 text-center justify-between sticky top-16 max-h-[100vh]"
  data-controller="sidebar"
  data-expanded="<%= (cookies[:sidebar_expanded] || true) %>"
  id="sidebarnav">
  <div class="flex flex-col text-left">
    <span class="sidebar-item">
      <%= nav_link_to root_path, class: "sidebar-link gap-3 py-2.5 my-1 text-base flex items-center relative rounded-md text-rose-100 w-full" do %>
        <span>🏠</span>
        <span class="[[data-expanded=false]_&]:hidden">Home</span>
      <% end %>
    </span>
    <span class="sidebar-item">
      <%= nav_link_to wardrobe_items_path, class: "sidebar-link gap-3 py-2.5 my-1 text-base flex items-center relative rounded-md w-full text-rose-100", starts_with: "/wardrobe_items" do %>
        <span>👗</span>
        <span class="[[data-expanded=false]_&]:hidden">My Wardrobe</span>
      <% end %>
    </span>
    <span class="sidebar-item">
      <%= nav_link_to outfits_path, class: "sidebar-link gap-3 py-2.5 my-1 text-base flex items-center relative rounded-md w-full text-rose-100", starts_with: "/outfits" do %>
        <span>🪞</span>
        <span class="[[data-expanded=false]_&]:hidden">Outfits</span>
      <% end %>
    </span>
  </div>
  <div class="text-left">
    <%= button_to nil, data: { action: "click->sidebar#toggle" } do %>
      <span class="[[data-expanded=true]_&]:hidden">➡️</span>
      <span class="[[data-expanded=false]_&]:hidden">⬅️</span>
      <span class="[[data-expanded=false]_&]:hidden">Toggle</span>
    <% end %>
  </div>
</aside>
