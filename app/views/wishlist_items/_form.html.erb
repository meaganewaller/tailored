<%= form_with(model: wishlist_item) do |form| %>
  <%= render "error_messages", resource: form.object %>

  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :store %>
    <%= form.text_field :store, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :price %>
    <%= form.text_field :price, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :status %>
    <%= form.text_field :status, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :savings_goal %>
    <%= form.text_field :savings_goal, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :current_savings %>
    <%= form.text_field :current_savings, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :purchase_date %>
    <%= form.date_field :purchase_date, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :account_id %>
    <%= form.text_field :account_id, class: "form-control" %>
  </div>

  <div>
    <%= form.button button_text(form.send(:submit_default_value)), class: "btn btn-primary" %>

    <% if form.object.new_record? %>
      <%= link_to t("cancel"), wishlist_items_path, class: "btn btn-secondary" %>
    <% else %>
      <%= link_to t("cancel"), wishlist_item_path(@wishlist_item), class: "btn btn-secondary" %>
    <% end %>
  </div>
<% end %>
