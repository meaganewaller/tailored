<%= content_for :title, "Wishlist Items" %>
<%= turbo_stream_from :wishlist_items %>

<div class="container px-4 mx-auto my-8">
  <div class="flex items-center justify-between mb-4">
    <div>
      <h1 class="h3">Wishlist Items</h1>

      <div class="text-sm font-medium">
        <span class="text-gray-500 dark:text-gray-300/75">Sort by:</span>
        <%= sortable @wishlist_items, :name, "Name", class: "text-gray-700 dark:text-gray-300 mr-1" %>
        <%= sortable @wishlist_items, :store, "Store", class: "text-gray-700 dark:text-gray-300 mr-1" %>
        <%= sortable @wishlist_items, :price, "Price", class: "text-gray-700 dark:text-gray-300 mr-1" %>
        <%= sortable @wishlist_items, :status, "Status", class: "text-gray-700 dark:text-gray-300 mr-1" %>
        <%= sortable @wishlist_items, :savings_goal, "Savings goal", class: "text-gray-700 dark:text-gray-300 mr-1" %>
        <%= sortable @wishlist_items, :current_savings, "Current savings", class: "text-gray-700 dark:text-gray-300 mr-1" %>
        <%= sortable @wishlist_items, :purchase_date, "Purchase date", class: "text-gray-700 dark:text-gray-300 mr-1" %>
      </div>
    </div>

    <%= link_to t("scaffold.new.title", model: "Wishlist Item"), new_wishlist_item_path, class: "btn btn-secondary" %>
  </div>

  <%= tag.div id: ("wishlist_items" if first_page?), class: "grid grid-cols-1 gap-8 md:grid-cols-2 lg:grid-cols-3" do %>
    <%= render partial: "wishlist_items/wishlist_item", collection: @wishlist_items, as: :wishlist_item, cached: true %>

    <div class="hidden only:block text-center">
      <p class="mb-4 h3">Create your first Wishlist Item</p>
      <%= link_to t("scaffold.new.title", model: "Wishlist Item"), new_wishlist_item_path, class: "btn btn-primary" %>
    </div>
  <% end %>

  <% if @pagy.pages > 1 %>
    <div class="my-6 text-center">
      <%== pagy_nav(@pagy) %>
    </div>
  <% end %>
</div>
