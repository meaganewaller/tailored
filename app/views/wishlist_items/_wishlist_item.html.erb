<div id="<%= dom_id wishlist_item %>" class="p-6 bg-white dark:bg-gray-900 rounded-lg shadow space-y-4">
  <div class="flex justify-between items-center">
    <h2 class="font-semibold text-lg text-gray-900 dark:text-gray-200">
      <%= wishlist_item.name %>
    </h2>
    <%= link_to "View", wishlist_item, class: "btn btn-sm btn-primary" %>
  </div>

  <p class="text-sm font-medium text-gray-500">Store: <%= wishlist_item.store %></p>
  <p class="text-sm font-medium text-gray-500">Price: <%= number_to_currency(wishlist_item.price) %></p>
  <p class="text-sm font-medium text-gray-500">Status: <%= wishlist_item.status %></p>
  <p class="text-sm font-medium text-gray-500">Purchase Date: <%= wishlist_item.purchase_date %></p>

  <!-- Savings Progress -->
  <div>
    <p class="text-sm font-medium text-gray-500">Savings Progress:</p>
    <div class="relative pt-1">
      <div class="overflow-hidden h-2 mb-4 text-xs flex rounded bg-gray-200">
        <% if wishlist_item.savings_goal && wishlist_item.savings_goal > 0 %>
          <div style="width:<%= ((wishlist_item.current_savings || 0) / (wishlist_item.savings_goal || 0)) * 100 %>%" class="shadow-none flex flex-col text-center whitespace-nowrap text-white justify-center bg-green-500">
          </div>
        <% end %>
      </div>
    </div>
    <p class="text-sm font-medium text-gray-900 dark:text-gray-200">
    <%= number_to_currency(wishlist_item.current_savings || 0) %> of <%= number_to_currency(wishlist_item.savings_goal || 0) %> saved
    </p>
  </div>

  <div class="flex space-x-2">
    <%= link_to "Edit", edit_wishlist_item_path(wishlist_item), class: "btn btn-sm btn-secondary" %>
    <%= button_to "Delete", wishlist_item, method: :delete, data: { turbo_confirm: "Are you sure?" }, class: "btn btn-sm btn-danger" %>
  </div>
</div>
