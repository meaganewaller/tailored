<div class="bg-white rounded-lg shadow-md p-6 max-w-md mx-auto mt-6">
  <!-- Header Section -->
  <div class="flex justify-between items-center mb-4">
    <h2 class="text-xl font-bold text-gray-800">Seasonal Wardrobe Planner</h2>
    <button class="text-gray-400 hover:text-gray-600">
      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
      </svg>
    </button>
  </div>

  <!-- Seasonal Preparation -->
  <div class="mb-6">
    <h3 class="text-lg font-semibold text-gray-700">Fall Essentials</h3>
    <ul class="mt-4 space-y-2">
      <li class="flex justify-between items-center bg-gray-100 p-2 rounded-lg">
        <div>
          <p class="text-sm text-gray-800">Bring Out</p>
          <p class="text-xs text-gray-500">Light Sweaters, Denim Jacket</p>
        </div>
        <button class="text-xs bg-green-500 text-white px-3 py-1 rounded-md hover:bg-green-600">Add to Wardrobe</button>
      </li>
      <li class="flex justify-between items-center bg-gray-100 p-2 rounded-lg">
        <div>
          <p class="text-sm text-gray-800">Store Away</p>
          <p class="text-xs text-gray-500">Summer Shorts, Tank Tops</p>
        </div>
        <button class="text-xs bg-yellow-500 text-white px-3 py-1 rounded-md hover:bg-yellow-600">Store</button>
      </li>
    </ul>
  </div>

  <!-- Seasonal Shopping Suggestions -->
  <div class="mb-6">
    <h3 class="text-lg font-semibold text-gray-700">Suggested Additions</h3>
    <ul class="mt-4 space-y-2">
      <li class="flex justify-between items-center bg-gray-100 p-2 rounded-lg">
        <div>
          <p class="text-sm text-gray-800">Add</p>
          <p class="text-xs text-gray-500">Warm Scarf, Rain Boots</p>
        </div>
        <button class="text-xs bg-blue-500 text-white px-3 py-1 rounded-md hover:bg-blue-600">Shop Now</button>
      </li>
    </ul>
  </div>

  <!-- Reminder Button -->
  <button class="text-sm bg-gray-200 text-gray-700 px-4 py-2 rounded-md hover:bg-gray-300 w-full">Set Seasonal Reminder</button>
</div>

