<div class="bg-white rounded-lg shadow-md p-6 max-w-md mx-auto">
  <div class="flex justify-between items-center mb-4">
    <div class="flex flex-col">
    <h2 class="text-xl font-bold text-gray-800">Wardrobe Summary</h2>
    <div class="text-xs text-gray-500 font-bold">Last updated: <span class="font-normal">Today at 9:00 AM</span></div>
    </div>
  </div>
  <div class="mb-6">
    <div class="text-center mb-4">
      <div class="text-3xl font-bold text-gray-900"><%= @total_items %></div>
      <p class="text-sm text-gray-500">Total Items</p>
      <p class="text-xs text-gray-400">
        <span class="font-bold">Top categories:</span>
        <% @top_categories.each do |category| %>
          <span><%= category[0].name.titleize %> <span class="italic">(<%= category[1] %>)</span></span>
        <% end %>
      </p>
    </div>

    <div class="flex justify-around mb-4">

      <!-- Color Distribution Chart -->
      <div class="flex flex-col items-center justify-around">
        <div class="flex">
          <% @top_colors.each do |tcolor| %>
            <div class="w-6 h-6 rounded-full flex items-center justify-center"
              style="background-color: <%= "#{tcolor['hex']}" %>"
              >
            </div>
          <% end %>
        </div>
        <p class="text-xs text-gray-500 mt-2">Color Distribution</p>
      </div>

      <!-- Fabric Composition Chart -->
      <div class="flex flex-col items-center justify-around">
        <div class="w-20 h-20 bg-gray-200 rounded-full flex items-center justify-center">
          <!-- Placeholder for Fabric Pie Chart -->
          <span class="text-sm text-gray-700">Fabric</span>
        </div>
        <p class="text-xs text-gray-500 mt-2">Fabric Composition</p>
      </div>
    </div>
  </div>

  <!-- Most Worn Items Section -->
  <div class="mb-6 flex justify-between">
    <div class="flex flex-col items-center">
      <h3 class="text-lg font-semibold text-gray-800 mb-2">Most Worn Items</h3>
      <div class="grid grid-cols-2 gap-2">
        <div class="w-12 h-12 bg-gray-300 rounded-lg">
          <!-- Placeholder for Item Thumbnail 1 -->
        </div>
        <div class="w-12 h-12 bg-gray-300 rounded-lg">
          <!-- Placeholder for Item Thumbnail 2 -->
        </div>
        <div class="w-12 h-12 bg-gray-300 rounded-lg">
          <!-- Placeholder for Item Thumbnail 3 -->
        </div>
        <div class="w-12 h-12 bg-gray-300 rounded-lg">
          <!-- Placeholder for Item Thumbnail 4 -->
        </div>
      </div>
      <%= link_to "View All", wardrobe_items_path, class: "text-xs text-blue-500 hover:underline mt-2 block" %>
    </div>
    <div class="flex flex-col items-center">
      <h3 class="text-lg font-semibold text-gray-800 mb-2">Wear This Week</h3>
      <div class="w-full h-full bg-gray-300 rounded-lg">
        <!-- Placeholder for Item Thumbnail 1 -->
      </div>
      <a href="#" class='text-xs text-blue-500 hover:underline mt-2 block'>See details</a>
    </div>
  </div>

  <!-- Wardrobe Gaps & Seasonal Insights -->
  <div class="flex justify-between">
    <!-- Wardrobe Gaps -->
    <div class="bg-gray-100 p-4 rounded-lg w-1/2 mr-2">
      <h4 class="text-sm font-semibold text-gray-700">Wardrobe Gaps</h4>
      <ul class="text-xs text-gray-600 mt-2">
        <li>- Rain Jacket</li>
        <li>- Formal Shoes</li>
      </ul>
    </div>

    <!-- Seasonal Insights -->
    <div class="bg-gray-100 p-4 rounded-lg w-1/2 ml-2">
      <h4 class="text-sm font-semibold text-gray-700">Seasonal Insights</h4>
      <ul class="text-xs text-gray-600 mt-2">
        <li>- Lightweight Sweater</li>
        <li>- Casual Sandals</li>
      </ul>
    </div>
  </div>
</div>
