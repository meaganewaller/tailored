<!-- WardrobeItem Item -->
<div id="<%= dom_id wardrobe_item %>" class="max-w-sm w-full lg:max-w-xs bg-white rounded-lg shadow-md overflow-hidden hover:shadow-lg transition-shadow duration-300">
  <!-- Item image -->
  <div class="h-48 w-full bg-gray-200">
    <% if wardrobe_item.images.any? %>
      <%= image_tag wardrobe_item.images.first, alt: wardrobe_item.name, class: "object-cover w-full h-full" %>
    <% else %>
      <% image_tag "placeholder_image.jpg", alt: "No Image Available", class: "object-cover w-full h-full" %>
    <% end %>
  </div>

  <!-- Item details -->
  <div class="p-4">
    <!-- Item Name and Category -->
    <h3 class="text-lg font-semibold text-gray-800 mb-1"><%= wardrobe_item.name.presence || "Unnamed Item" %></h3>
    <p class="text-sm text-gray-500"><%= wardrobe_item.category&.name %></p>

    <!-- Item Attributes (optional) -->
    <div class="mt-2 flex items-center space-x-2 text-xs text-gray-400">
      <% if wardrobe_item.colors.any? %>
        <% wardrobe_item.colors.each do |color_info| %>
          <div class="h-4 w-4 rounded-full border" style="background-color: <%= color_info["hex"] %>;" title="Hex: <%= color_info['hex'] %>, Score: <%= (color_info['score'] * 100).round(2) %>%">
          <!-- Accessible tooltip for score -->
          <span class="sr-only"><%= color_info["score"] %></span>
          </div>
        <% end %>
      <% else %>
        <p class="text-gray-500 text-sm"><em>No colors detected</em></p>
      <% end %>
      <span>|</span>
      <span>Fabric: Leather</span>
    </div>

    <!-- Action Buttons -->
    <div class="mt-4 flex justify-between items-center">
      <%= link_to "View Details", wardrobe_item, class: "text-sm text-blue-500 hover:underline" %>
      <button class="text-sm text-gray-500 hover:text-gray-700">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
        </svg>
      </button>
    </div>
  </div>
</div>
