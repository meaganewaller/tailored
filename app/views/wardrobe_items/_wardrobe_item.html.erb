<!-- WardrobeItem Item -->
<div
dom_id wardrobe_item
              <% end %>
link_to wardrobe_item
              <% end %>>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="flex mb-20">
link_to wardrobe_item
 do %>
      <% if wardrobe_item.images.any? %>
image_tag wardrobe_item.images.first, alt: wardrobe_item.name, class: "card-image"
 %>
      <% else %>
image_tag "placeholder_image.jpg", alt: "No Image Available", class: "card-image"
 %>
      <% end %>
    <% end %>
    <% if wardrobe_item.category %>
link_to wardrobe_item
 do %>
        <div class="">
wardrobe_item.category.name
 %>
        </div>
      <% end %>
    <% end %>
  </div>

  <h3 class="mb-5">
link_to wardrobe_item, class: ""
 do %>
wardrobe_item.name.presence || "Unnamed Item"
 %>
    <% end %>
  </h3>

  <div class="flex flex-col justify-between h-full">
    <div class="flex flex-row justify-around text-center flex-wrap mb-3 mx-2">
      <% if wardrobe_item.colors.any? %>
wardrobe_item.colors.each
 do |color_info| %>
(color_info["score"] * 100).round(2)
 %>%">
            <!-- Accessible tooltip for score -->
color_info["score"]
 %></span>
          </span>
        <% end %>
      <% else %>
        <p class=""><em>No colors detected</em></p>
      <% end %>
    </div>

    <div class="flex flex-col">
wardrobe_item.season.presence || "All Season"
 %></p>
wardrobe_item.occasions.any? ? wardrobe_item.occasions.join(", ") : "<em>Not specified</em>".html_safe
 %></p>
wardrobe_item.cost.present? ? number_to_currency(wardrobe_item.cost) : "<em>Not specified</em>".html_safe
 %></p>
wardrobe_item.condition.present? ? wardrobe_item.condition.capitalize : "<em>Not specified</em>".html_safe
 %></p>
    </div>
  </div>
</div>
