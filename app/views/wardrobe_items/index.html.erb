<%= content_for :title, "My Wardrobe" %>

<%= turbo_stream_from :wardrobe_items %>

<div class="sm:p-5 md:p-10">
  <div class="md:flex md:items-center md:justify-between mx-auto">
    <div class="min-w-0 flex-1">
      <h2 class="text-2xl font-bold leading-7 sm:truncate sm:text-3xl sm:tracking-tight">My Wardrobe</h2>
    </div>
    <div class="mt-4 flex md:ml-4 md:mt-0 gap-x-2">
      <%= link_to t("scaffold.new.title", model: "Wardrobe Item"), new_wardrobe_item_path, class: "btn btn-primary" %>
      <%= link_to t("Bulk Upload"), bulk_upload_wardrobe_items_path, class: "btn btn-secondary" %>
    </div>
  </div>
  <div class="flex items-center justify-between mb-4 mt-2">
    <div class="text-sm font-medium">
      <span class="">Sort by:</span>
      <%= sortable @wardrobe_items, :name, "Name", class: "mr-1" %>
      <%= sortable @wardrobe_items, :cost, "Cost", class: "mr-1" %>
      <%= sortable @wardrobe_items, :season, "Season", class: "mr-1" %>
      <%= sortable @wardrobe_items, :condition, "Condition", class: "mr-1" %>
    </div>
  </div>

  <div class="mx-auto">
    <%= tag.div id: ("wardrobe_items" if first_page?), class: "grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 xl:grid-cols-5 gap-10" do %>
      <%= render partial: "wardrobe_items/wardrobe_item", collection: @wardrobe_items, as: :wardrobe_item, cached: true %>

      <div class="hidden only:block text-center">
        <div class="text-center">
          <svg class="mx-auto h-12 w-12" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
            <path vector-effect="non-scaling-stroke" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 13h6m-3-3v6m-9 1V7a2 2 0 012-2h6l2 2h6a2 2 0 012 2v8a2 2 0 01-2 2H5a2 2 0 01-2-2z" />
          </svg>
          <h3 class="mt-2 text-sm font-semibold">Your wardrobe is empty</h3>
          <p class="mt-1 text-sm">Get started by adding your first item to your wardrobe.</p>
          <div class="mt-6">
            <button type="button" class="inline-flex items-center rounded-md px-3 py-2 text-sm font-semibold shadow-sm focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2">
              <svg class="-ml-0.5 mr-1.5 h-5 w-5" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true" data-slot="icon">
                <path d="M10.75 4.75a.75.75 0 0 0-1.5 0v4.5h-4.5a.75.75 0 0 0 0 1.5h4.5v4.5a.75.75 0 0 0 1.5 0v-4.5h4.5a.75.75 0 0 0 0-1.5h-4.5v-4.5Z" />
              </svg>
              New Wardrobe Item
            </button>
          </div>
        </div>
        <p class="mb-4 h3">Add your first piece to your wardrobe</p>
        <%= link_to t("scaffold.new.title", model: "Wardrobe Item"), new_wardrobe_item_path, class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>

  <% if @pagy.pages > 1 %>
    <div class="mx-20">
      <div class="flex items-center justify-between border-t px-4 py-3 sm:px-6">
        <%== pagy_nav(@pagy) %>
      </div>
    </div>
  <% end %>
</div>
