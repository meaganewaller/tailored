<div class="max-w-xl mx-auto my-8">
  <h2 class="text-2xl font-bold mb-6 text-gray-800">Upload Your Wardrobe Items</h2>

form_with(url: bulk_uploads_path(resource_type: "wardrobe_type"), multipart: true, local: true, class: "bg-white shadow-md rounded-lg px-8 pt-6 pb-8 mb-4")
 do |form| %>
    <div class="mb-6">
form.label :photos, "Select Clothing Photos", class: "block text-gray-700 font-bold mb-2"
 %>
form.file_field :photos, multiple: true, accept: "image/*", class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-teal-500 focus:border-transparent"
 %>
      <p class="mt-2 text-gray-500 text-sm">You can upload multiple photos at once. Supported formats: PNG, JPG.</p>
    </div>

    <!-- Submit Button -->
    <div class="flex justify-end">
form.submit "Upload Items", class: "bg-teal-500 text-white font-bold py-2 px-4 rounded hover:bg-teal-600 focus:outline-none focus:ring-2 focus:ring-teal-500 focus:ring-opacity-50"
 %>
    </div>
  <% end %>
</div>
