<%= form_with(model: wardrobe_item) do |form| %>
  <%= render "error_messages", resource: form.object %>

  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :category %>
    <%= form.text_field :category, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :color %>
    <%= form.text_field :color, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :season %>
    <%= form.text_field :season, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :occasion %>
    <%= form.text_field :occasion, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :cost %>
    <%= form.text_field :cost, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :condition %>
    <%= form.text_field :condition, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.hidden_field :account_id, class: "form-control" %>
  </div>

  <div>
    <%= form.button button_text(form.send(:submit_default_value)), class: "btn btn-primary" %>

    <% if form.object.new_record? %>
      <%= link_to t("cancel"), wardrobe_items_path, class: "btn btn-secondary" %>
    <% else %>
      <%= link_to t("cancel"), wardrobe_item_path(@wardrobe_item), class: "btn btn-secondary" %>
    <% end %>
  </div>
<% end %>
