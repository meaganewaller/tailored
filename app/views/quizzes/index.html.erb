<%= content_for :title, "Quizzes" %>
<%= turbo_stream_from :quizzes %>

<div class="container px-4 mx-auto my-8">
  <div class="flex items-center justify-between mb-4">
    <div>
      <h1 class="h3">Quizzes</h1>
      <div class="text-sm font-medium">
        <span class="">Sort by:</span>
        <%= sortable @quizzes, :title, "Title", class: "mr-1" %>
        <%= sortable @quizzes, :updated_at, "Date", class: "mr-1" %>
      </div>
    </div>
  </div>

  <%= tag.div id: ("quizzes" if first_page?), class: "grid gap-2 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4" do %>
  <%= render partial: "quizzes/quiz", collection: @quizzes, as: :quiz, cached: true %>

  <div class="hidden only:block text-center">
    <p class="mb-4 h3">No quizzes at this time!</p>
  </div>
<% end %>

<% if @pagy.pages > 1 %>
  <div class="my-6 text-center">
    <%== pagy_nav(@pagy) %>
  </div>
<% end %>
</div>
