<!-- app/views/layouts/_logo.html.erb -->
<div class="<%= dark_mode? ? 'dark:flex' : 'flex dark:hidden' %> items-center flex-shrink-0 mr-6">
  <%= link_to root_path, class: "flex items-center text-gray-700 hover:text-gray-800 dark:text-gray-100 dark:hover:text-gray-300" do %>
    <%= image_tag(dark_mode? ? "logo-darkmode.svg" : "logo-lightmode.svg", class: "w-40 h-30") %>
    <span class="sr-only"><%= Jumpstart.config.application_name %></span>
  <% end %>
</div>
