<header class="absolute inset-x-0 top-0 z-50 flex h-16 border-b border-gray-900/10" data-controller="toggle">
  <div class="mx-auto flex w-full max-w-7xl items-center justify-between px-4 sm:px-6 lg:px-8">
    <div class="flex flex-1 items-center gap-x-6">
      <button type="button" class="-m-3 p-3 md:hidden">
        <span class="sr-only">Open main menu</span>
        <svg class="h-5 w-5 text-gray-900" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true" data-slot="icon">
          <path fill-rule="evenodd" d="M2 4.75A.75.75 0 0 1 2.75 4h14.5a.75.75 0 0 1 0 1.5H2.75A.75.75 0 0 1 2 4.75ZM2 10a.75.75 0 0 1 .75-.75h14.5a.75.75 0 0 1 0 1.5H2.75A.75.75 0 0 1 2 10Zm0 5.25a.75.75 0 0 1 .75-.75h14.5a.75.75 0 0 1 0 1.5H2.75a.75.75 0 0 1-.75-.75Z" clip-rule="evenodd" />
        </svg>
      </button>
      <%= link_to root_path, class: "inline dark:hidden" do %>
        <%= image_tag("mark-lightmode", class: "h-8 w-auto", alt: "Tailored") %>
        <span class="sr-only"><%= Jumpstart.config.application_name %></span>
      <% end %>
      <%= link_to root_path, class: "dark:inline hidden" do %>
        <%= image_tag("mark-darkmode", class: "h-8 w-auto", alt: "Tailored") %>
        <span class="sr-only"><%= Jumpstart.config.application_name %></span>
      <% end %>
    </div>
    <nav data-toggle-target="toggleable"
         data-transition-enter="transition-all ease-linear duration-300"
         data-transition-enter-from="opacity-0 h-0"
         data-transition-enter-to="opacity-100"
         data-transition-leave="transition-all ease-linear duration-300"
         data-transition-leave-from="opacity-100"
         data-transition-leave-to="opacity-0"
         class="hidden w-full flex-grow opacity-0 md:opacity-100 md:w-auto md:pb-0 md:flex md:gap-x-11 md:text-sm md:font-semibold md:leading-6 md:text-gray-700">
      <div class="lg:flex-grow">
        <%= nav_link_to "Wardrobe", wardrobe_items_path, starts_with: wardrobe_items_path %>
        <%= nav_link_to "Outfits", outfits_path, starts_with: outfits_path %>
        <%= nav_link_to "Quizzes", quizzes_path, starts_with: quizzes_path %>
      </div>
      <div class="flex flex-1 items-center justify-end gap-x-8">
        <div class="hidden lg:inline-block">
          <%= render "notifications" %>
        </div>

        <div class="hidden lg:inline-flex z-10 items-center leading-none no-underline align-middle rounded text-gray-700 hover:text-gray-800 dark:text-gray-50 dark:hover:text-gray-200">
          <div class="relative" data-controller="dropdown">
            <button data-action="click->dropdown#toggle click@window->dropdown#hide" role="button" class="inline-block select-none p-2 rounded hover:bg-gray-50 dark:hover:bg-gray-800" aria-label="Profile Menu">
              <span class="flex items-center gap-1 text-gray-700 dark:text-gray-100 appearance-none">
                <%= account_avatar current_account, class: "flex-shrink-0 rounded-full h-6 w-6" %>
                <span class="max-w-32 truncate leading-tight"><%= current_account.name %></span>
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" class="fill-current flex-shrink-0 w-4 h-4"><path d="M9.293 12.95l.707.707L15.657 8l-1.414-1.414L10 10.828 5.757 6.586 4.343 8z"></path></svg>
              </span>
            </button>
            <div data-dropdown-target="menu"
                  data-transition-enter="transition ease-out duration-200"
                  data-transition-enter-from="opacity-0 translate-y-1"
                  data-transition-enter-to="opacity-100 translate-y-0"
                  data-transition-leave="transition ease-in duration-150"
                  data-transition-leave-from="opacity-100 translate-y-0"
                  data-transition-leave-to="opacity-0 translate-y-1"
                  class="z-20 hidden mt-2 lg:absolute lg:right-0 dropdown-menu">
              <div class="overflow-hidden bg-white dark:bg-gray-900 border border-gray-200 dark:border-gray-700 rounded shadow-md">
                <%= link_to current_account.name, current_account, class: 'border-b border-gray-200 dark:border-gray-700 font-semibold text-base text-gray-800 bg-white hover:bg-primary-50 dark:text-gray-50 dark:bg-gray-800 dark:hover:bg-primary-800 dark:text-gray-50 dark:bg-gray-800 transition ease-in-out duration-200 whitespace-nowrap no-underline block px-6 py-3' %>
                <%= link_to t(".profile"), edit_user_registration_path, class: 'text-gray-800 bg-white hover:bg-primary-50 dark:text-gray-50 dark:bg-gray-800 dark:hover:bg-primary-800 transition ease-in-out duration-200 whitespace-nowrap no-underline block px-6 py-3' %>
                <%= link_to t(".password"), edit_account_password_path, class: 'text-gray-800 bg-white hover:bg-primary-50 dark:text-gray-50 dark:bg-gray-800 dark:hover:bg-primary-800 transition ease-in-out duration-200 whitespace-nowrap no-underline block px-6 py-3' %>
                <%= link_to t(".connected_accounts"), user_connected_accounts_path, class: 'text-gray-800 bg-white hover:bg-primary-50 dark:text-gray-50 dark:bg-gray-800 dark:hover:bg-primary-800 transition ease-in-out duration-200 whitespace-nowrap no-underline block px-6 py-3' if Devise.omniauth_configs.any? %>
                <%= link_to t(".billing"), subscriptions_path, class: 'text-gray-800 bg-white hover:bg-primary-50 dark:text-gray-50 dark:bg-gray-800 dark:hover:bg-primary-800 transition ease-in-out duration-200 whitespace-nowrap no-underline block px-6 py-3' if Jumpstart.config.payments_enabled? %>
                <%= link_to t(".accounts"), accounts_path, class: 'text-gray-800 bg-white hover:bg-primary-50 dark:text-gray-50 dark:bg-gray-800 dark:hover:bg-primary-800 transition ease-in-out duration-200 whitespace-nowrap no-underline block px-6 py-3' %>
                <%#= link_to t(".api_tokens"), api_tokens_path, class: 'text-gray-800 bg-white hover:bg-primary-50 dark:text-gray-50 dark:bg-gray-800 dark:hover:bg-primary-800 transition ease-in-out duration-200 whitespace-nowrap no-underline block px-6 py-3' if Jumpstart.config.payments_enabled? %>
                <!--
                  <div class="px-6 py-3 text-xs font-bold text-gray-800 uppercase bg-white dark:text-gray-50 dark:bg-gray-800 border-t border-gray-200 dark:border-gray-700">Accounts</div>
                -->
                <% if Current.other_accounts.any? %>
                  <div class="px-6 py-3 text-xs font-bold text-gray-800 uppercase bg-white dark:text-gray-50 dark:bg-gray-800 border-t border-gray-200 dark:border-gray-700">Switch Account</div>
                  <% current_user.accounts.order(name: :asc).where.not(id: current_account.id).each do |account| %>
                    <%= switch_account_button account, data: { controller: :accounts, action: "ajax:success->accounts#reconnect" }, class: 'w-full text-left text-gray-800 bg-white hover:bg-primary-50 dark:text-gray-50 dark:bg-gray-800 dark:hover:bg-primary-800 transition ease-in-out duration-200 whitespace-nowrap no-underline block px-6 py-3 cursor-pointer' %>
                  <% end %>
                <% end %>
                <% if current_user.admin? %>
                  <div class="px-6 py-3 text-xs font-bold text-gray-800 uppercase bg-white dark:text-gray-50 dark:bg-gray-800 border-t border-gray-200 dark:border-gray-700"><%= t(".admin") %></div>
                  <%= link_to t(".dashboard"), admin_root_path, class: 'text-gray-800 bg-white hover:bg-primary-50 dark:text-gray-50 dark:bg-gray-800 dark:hover:bg-primary-800 transition ease-in-out duration-200 whitespace-nowrap no-underline block px-6 py-3', target: :_blank, data: { turbo: false } %>
                  <%= link_to 'Sidekiq', admin_sidekiq_web_path, class: 'text-gray-800 bg-white hover:bg-primary-50 dark:text-gray-50 dark:bg-gray-800 dark:hover:bg-primary-800 transition ease-in-out duration-200 whitespace-nowrap no-underline block px-6 py-3', target: :_blank, data: { turbo: false } if defined?(::Sidekiq) %>
                  <%= link_to 'GoodJob', good_job_path, class: 'text-gray-800 bg-white hover:bg-primary-50 dark:text-gray-50 dark:bg-gray-800 dark:hover:bg-primary-800 transition ease-in-out duration-200 whitespace-nowrap no-underline block px-6 py-3', target: :_blank, data: { turbo: false } if defined?(::GoodJob) %>
                <% end %>
                <% if Rails.env.development? %>
                  <div class="px-6 py-3 text-xs font-bold text-gray-800 uppercase bg-white dark:text-gray-50 dark:bg-gray-800 border-t border-gray-200 dark:border-gray-700">Development</div>
                  <%= link_to 'Jumpstart Config', jumpstart_path(script_name: nil), class: 'text-gray-800 bg-white hover:bg-primary-50 dark:text-gray-50 dark:bg-gray-800 dark:hover:bg-primary-800 transition ease-in-out duration-200 whitespace-nowrap no-underline block px-6 py-3', data: { turbo: false } %>
                  <%= link_to 'Jumpstart Docs', jumpstart.docs_path, class: 'text-gray-800 bg-white hover:bg-primary-50 dark:text-gray-50 dark:bg-gray-800 dark:hover:bg-primary-800 transition ease-in-out duration-200 whitespace-nowrap no-underline block px-6 py-3', target: :_blank, data: { turbo: false } %>
                  <%= link_to 'Mailbin', mailbin_path(script_name: nil), class: 'text-gray-800 bg-white hover:bg-primary-50 dark:text-gray-50 dark:bg-gray-800 dark:hover:bg-primary-800 transition ease-in-out duration-200 whitespace-nowrap no-underline block px-6 py-3', target: :_blank, data: { turbo: false } %>
                <% end %>
                <%= button_to t(".sign_out"), destroy_user_session_path, method: :delete, class: 'w-full text-left font-medium cursor-pointer px-6 py-3 border-t border-gray-200 dark:border-gray-700 text-gray-800 bg-white hover:bg-primary-50 dark:text-gray-50 dark:bg-gray-800 dark:hover:bg-primary-800 transition ease-in-out duration-200 whitespace-nowrap' %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </nav>
  </div>

  <!-- Mobile menu, show/hide based on menu open state. -->
  <div class="lg:hidden" role="dialog" aria-modal="true">
    <!-- Background backdrop, show/hide based on slide-over state. -->
    <div class="fixed inset-0 z-50"></div>
    <div class="fixed inset-y-0 left-0 z-50 w-full overflow-y-auto bg-white px-4 pb-6 sm:max-w-sm sm:px-6 sm:ring-1 sm:ring-gray-900/10">
      <div class="-ml-0.5 flex h-16 items-center gap-x-6">
        <button type="button" class="-m-2.5 p-2.5 text-gray-700">
          <span class="sr-only">Close menu</span>
          <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true" data-slot="icon">
            <path stroke-linecap="round" stroke-linejoin="round" d="M6 18 18 6M6 6l12 12" />
          </svg>
        </button>
        <div class="-ml-0.5">
          <a href="#" class="-m-1.5 block p-1.5">
            <span class="sr-only">Your Company</span>
            <img class="h-8 w-auto" src="https://tailwindui.com/plus/img/logos/mark.svg?color=indigo&shade=600" alt="">
          </a>
        </div>
      </div>
      <div class="mt-2 space-y-2">
        <a href="#" class="-mx-3 block rounded-lg px-3 py-2 text-base font-semibold leading-7 text-gray-900 hover:bg-gray-50">Home</a>
        <a href="#" class="-mx-3 block rounded-lg px-3 py-2 text-base font-semibold leading-7 text-gray-900 hover:bg-gray-50">Invoices</a>
        <a href="#" class="-mx-3 block rounded-lg px-3 py-2 text-base font-semibold leading-7 text-gray-900 hover:bg-gray-50">Clients</a>
        <a href="#" class="-mx-3 block rounded-lg px-3 py-2 text-base font-semibold leading-7 text-gray-900 hover:bg-gray-50">Expenses</a>
      </div>
    </div>
  </div>
</header>
