<!-- Off-canvas menu for mobile, show/hide based on off-canvas menu state. -->
<div
  class="relative z-50 lg:hidden"
  role="dialog"
  aria-modal="true"
  data-sidebar-target="offCanvasMenuWrapper"
>
  <!--
    Off-canvas menu backdrop, show/hide based on off-canvas menu  state.
    Entering: "transition-opacity ease-linear duration-300"
    From: "opacity-0"
    To: "opacity-100"
    Leaving: "transition-opacity ear-liner duration-300"
    From: "opacity-100"
    To: "opacity-0"
  -->
  <div
    data-sidebar-target="backdrop"
    class="fixed inset-0 bg-rose-900/80"
    aria-hidden="true"
    data-transition-enter="transition-opacity ease-linear duration-300"
    data-transition-enter-from="opacity-0"
    data-transition-enter-to="opacity-100"
    data-transition-leave="transition-opacity ease-linear duration-300"
    data-transition-leave-from="opacity-100"
    data-transition-leave-to="opacity-0"
  ></div>

  <div class="fixed inset-0 flex">
    <!--
      Off-canvas menu, show/hide based on off-canvas menu state.

      Entering: "transition ease-in-out duration-300 transform"
      From: "-translate-x-full"
      To: "translate-x-0"
      Leaving: "transition ease-in-out duration-300 transform"
      From: "translate-x-0"
      To: "-translate-x-full"
    -->
    <div
      data-sidebar-target="offCanvasMenu"
      aria-hidden="true"
      data-transition-enter="transition ease-in-out duration-300 transform"
      data-transition-enter-from="-translate-x-full"
      data-transition-enter-to="translate-x-0"
      data-transition-leave="transition ease-in-out duration-300 transform"
      data-transition-leave-from="translate-x-0"
      data-transition-leave-to="-translate-x-full"
      class="relative mr-16 flex w-full max-w-xs flex-1"
    >
      <!--
        Close button, show/hide based on off-canvas menu state.
        Entering: "ease-in-out duration-300"
        From: "opacity-0"
        To: "opacity-100"
        Leaving: "ease-in-out duration-300"
        From: "opacity-100"
        To: "opacity-0"
      -->
      <div
        data-sidebar-target="offCanvasMenuCloseButton"
        data-transition-enter="ease-in-out duration-300"
        data-transition-enter-from="opacity-0"
        data-transition-enter-to="opacity-100"
        data-transition-leave="ease-in-out duration-300"
        data-transition-leave-from="opacity-100"
        data-transition-leave-to="opacity-0"
        class="absolute left-full top-0 flex w-16 justify-center pt-5">
        <button type="button" class="-m-2.5 p-2.5" data-action="click->sidebar#toggleOffCanvasMenu">
          <span class="sr-only">Close sidebar</span>
          <svg class="h-6 w-6 text-white" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true" data-slot="icon">
            <path stroke-linecap="round" stroke-linejoin="round" d="M6 18 18 6M6 6l12 12" />
          </svg>
        </button>
      </div>

      <!-- Sidebar component -->
      <div
        class="flex grow flex-col gap-y-5 overflow-y-auto bg-rose-300 dark:bg-rose-900 pb-4"
      >
        <div class="flex h-16 shrink-0 items-center">
          <%= render partial: "logo" %>
        </div>
        <nav class="flex flex-1 flex-col">
          <ul class="text-sm list-none">
            <li class="text-xs font-bold pb-[5px]">
              <span class="text-xs dark:text-rose-200 font-semibold uppercase">Home</span>
            </li>
            <li class="sidebar-item">
              <%= nav_link_to root_path, class: "sidebar-link gap-3 py-2.5 my-1 text-base flex items-center relative rounded-md text-rose-100 w-full" do %>
                <span>Dashboard</span>
              <% end %>
            </li>
            <li class="text-xs font-bold mb-4 mt-6">
              <span class="text-xs dark:text-rose-200 font-semibold uppercase">My Style</span>
            </li>
            <li class="sidebar-item">
              <%= nav_link_to wardrobe_items_path, class: "sidebar-link gap-3 py-2.5 my-1 text-base flex items-center relative rounded-md w-full text-rose-100", starts_with: "/wardrobe_items" do %>
                <span>My Wardrobe</span>
              <% end %>
            </li>
            <li class="sidebar-item">
              <%= nav_link_to outfits_path, class: "sidebar-link gap-3 py-2.5 my-1 text-base flex items-center relative rounded-md w-full text-rose-100", starts_with: "/outfits" do %>
                <span>My Outfits</span>
              <% end %>
            </li>
          </ul>
        </nav>
      </div>
    </div>
  </div>
</div>

